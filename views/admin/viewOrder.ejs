    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>
        function printOrder() {
            window.print();
        }

        function sendEmail() {
            swal({
                title: "Send Email",
                text: "Email sent to customer successfully!",
                icon: "success",
                button: "OK"
            });
        }

        function createRefund() {
            swal({
                title: "Process Refund",
                text: "Are you sure you want to process a refund for this order?",
                icon: "warning",
                buttons: ["Cancel", "Process Refund"],
                dangerMode: true,
            }).then((willRefund) => {
                if (willRefund) {
                    swal("Refund processed successfully!", {
                        icon: "success",
                    });
                }
            });
        }

        function cancelOrder() {
            swal({
                title: "Cancel Order",
                text: "Are you sure you want to cancel this order? This action cannot be undone.",
                icon: "warning",
                buttons: ["No", "Yes, Cancel Order"],
                dangerMode: true,
            }).then((willCancel) => {
                if (willCancel) {
                    swal("Order has been cancelled!", {
                        icon: "success",
                    });
                }
            });
        }

        // Auto-submit form when status is changed
        document.getElementById('statusSelect').addEventListener('change', function() {
            if (this.value) {
                swal({
                    title: "Update Status",
                    text: `Are you sure you want to change the status to "${this.options[this.selectedIndex].text}"?`,
                    icon: "info",
                    buttons: ["Cancel", "Update"],
                }).then((willUpdate) => {
                    if (willUpdate) {
                        this.form.submit();
                    } else {
                        this.selectedIndex = 0; 
                    }
                });
            }
        });
    </script>
