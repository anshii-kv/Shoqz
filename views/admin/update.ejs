    height: 1px;
    background-color: rgba(255, 255, 255, 0.2);
    margin: 10px 20px;
}

.sidebar-menu ul {
    list-style: none;
}

.sidebar-menu li {
    padding: 10px 20px;
    transition: background-color 0.3s;
}

.sidebar-menu li:hover {
    background-color: rgba(255, 255, 255, 0.05);
}

.sidebar-menu a {
    color: white;
    text-decoration: none;
    display: flex;
