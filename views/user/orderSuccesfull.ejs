<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>Order Successful - Thank You!</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
        <style>
            .success-container {
                background-color: #bddbeb;
                min-height: 100vh;
                display: flex;
                align-items: center;
                justify-content: center;
            }
            
            .success-card {
                border-radius: 15px;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
                overflow: hidden;
                animation: slideUp 0.6s ease-out;
            }
            
            @keyframes slideUp {
                from {
                    opacity: 0;
                    transform: translateY(50px);
                }
                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }
            
            .success-header {
                background: linear-gradient(135deg, #28a745, #20c997);
                color: white;
                padding: 3rem 2rem;
                text-align: center;
                position: relative;
                overflow: hidden;
            }
            
            .success-header::before {
                content: '';
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%;
                background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
                animation: rotate 20s linear infinite;
            }
            
            @keyframes rotate {
                0% { transform: rotate(0deg); }
                100% { transform: rotate(360deg); }
            }
            
            .success-icon {
                font-size: 4rem;
                margin-bottom: 1rem;
                animation: bounce 2s infinite;
                position: relative;
                z-index: 1;
            }
            
            @keyframes bounce {
                0%, 20%, 50%, 80%, 100% {
                    transform: translateY(0);
                }
                40% {
                    transform: translateY(-10px);
                }
                60% {
                    transform: translateY(-5px);
                }
            }
            
            .success-content {
                padding: 2rem;
            }
            
            .order-details {
                background-color: #f8f9fa;
                border-radius: 10px;
                padding: 1.5rem;
                margin: 2rem 0;
                border-left: 4px solid #28a745;
            }
            
            .detail-item {
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 0.5rem 0;
                border-bottom: 1px solid #e9ecef;
            }
            
            .detail-item:last-child {
                border-bottom: none;
            }
            
            .detail-label {
                font-weight: 600;
                color: #495057;
            }
            
            .detail-value {
                color: #28a745;
                font-weight: 500;
            }
            
            .btn-primary {
                background-color: #0d6efd;
                border-color: #0d6efd;
                padding: 12px 30px;
                font-weight: 500;
                transition: all 0.3s ease;
            }
            
            .btn-primary:hover {
                background-color: #0b5ed7;
                border-color: #0a58ca;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(13, 110, 253, 0.3);
            }
            
            .btn-outline-primary {
                border-color: #0d6efd;
                color: #0d6efd;
                padding: 12px 30px;
                font-weight: 500;
                transition: all 0.3s ease;
            }
            
            .btn-outline-primary:hover {
                background-color: #0d6efd;
                border-color: #0d6efd;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(13, 110, 253, 0.3);
            }
            
            .illustration {
                text-align: center;
                margin: 2rem 0;
            }
            
            .delivery-truck {
                font-size: 3rem;
                color: #28a745;
                animation: drive 3s ease-in-out infinite;
                display: inline-block;
            }
            
            @keyframes drive {
                0%, 100% {
                    transform: translateX(0);
                }
                50% {
                    transform: translateX(20px);
                }
            }
            
            .confetti {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                overflow: hidden;
                pointer-events: none;
            }
            
            .confetti-piece {
                position: absolute;
                width: 6px;
                height: 6px;
                background: #ffd700;
                animation: confetti-fall 3s linear infinite;
            }
            
            .confetti-piece:nth-child(odd) {
                background: #ff6b6b;
                animation-delay: 0.5s;
            }
            
            .confetti-piece:nth-child(even) {
                background: #4ecdc4;
                animation-delay: 1s;
            }
            
            @keyframes confetti-fall {
                0% {
                    transform: translateY(-100vh) rotate(0deg);
                    opacity: 1;
                }
                100% {
                    transform: translateY(100vh) rotate(360deg);
                    opacity: 0;
                }
            }
            
            .next-steps {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white;
                border-radius: 10px;
                padding: 1.5rem;
                margin: 2rem 0;
            }
            
            .next-steps h5 {
                margin-bottom: 1rem;
                font-weight: 600;
            }
            
            .next-steps ul {
                list-style: none;
                padding: 0;
            }
            
            .next-steps li {
                padding: 0.5rem 0;
                position: relative;
                padding-left: 2rem;
            }
            
            .next-steps li::before {
                content: '\f00c';
                font-family: 'Font Awesome 6 Free';
                font-weight: 900;
                position: absolute;
                left: 0;
                color: #20c997;
            }
        </style>
    </head>
    <body>
        <div class="success-container">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8 col-md-10">
                        <div class="card success-card">
                            <!-- Success Header -->
                            <div class="success-header">
                                <div class="confetti">
                                    <div class="confetti-piece" style="left: 10%; animation-delay: 0s;"></div>
                                    <div class="confetti-piece" style="left: 20%; animation-delay: 0.2s;"></div>
                                    <div class="confetti-piece" style="left: 30%; animation-delay: 0.4s;"></div>
                                    <div class="confetti-piece" style="left: 40%; animation-delay: 0.6s;"></div>
                                    <div class="confetti-piece" style="left: 50%; animation-delay: 0.8s;"></div>
                                    <div class="confetti-piece" style="left: 60%; animation-delay: 1s;"></div>
                                    <div class="confetti-piece" style="left: 70%; animation-delay: 1.2s;"></div>
                                    <div class="confetti-piece" style="left: 80%; animation-delay: 1.4s;"></div>
                                    <div class="confetti-piece" style="left: 90%; animation-delay: 1.6s;"></div>
                                </div>
                                <div class="success-icon">
                                    <i class="fas fa-check-circle"></i>
                                </div>
                                <h1 class="mb-3">Order Successful!</h1>
                                <p class="lead mb-0">Thank you for your purchase. Your order has been placed successfully.</p>
                            </div>
                            
                            <!-- Success Content -->
                            <div class="success-content">
                                <!-- Order Details -->
                                <div class="order-details">
                                    <h5 class="mb-3">
                                        <i class="fas fa-receipt me-2"></i>
                                        Order Details
                                    </h5>
                                    <div class="detail-item">
                                        <span class="detail-label">Order ID:</span>
                                        <span class="detail-value">#ORD-2025-001234</span>
                                    </div>
                                    <div class="detail-item">
                                        <span class="detail-label">Order Date:</span>
                                        <span class="detail-value">July 09, 2025</span>
                                    </div>
                                    <div class="detail-item">
                                        <span class="detail-label">Total Amount:</span>
                                        <span class="detail-value">â‚¹2,499.00</span>
                                    </div>
                                    <div class="detail-item">
                                        <span class="detail-label">Payment Method:</span>
                                        <span class="detail-value">Credit Card</span>
                                    </div>
                                    <div class="detail-item">
                                        <span class="detail-label">Estimated Delivery:</span>
                                        <span class="detail-value">July 16, 2025</span>
                                    </div>
                                </div>
                                
                                <!-- Illustration -->
                                <div class="illustration">
                                    <div class="delivery-truck">
                                        <i class="fas fa-truck"></i>
                                    </div>
                                    <div class="mt-3">
                                        <h5 class="text-success">Your order is on its way!</h5>
                                        <p class="text-muted">We'll send you tracking information once your order ships.</p>
                                    </div>
                                </div>
                                
                                <!-- Next Steps -->
                                <div class="next-steps">
                                    <h5>
                                        <i class="fas fa-list-check me-2"></i>
                                        What happens next?
                                    </h5>
                                    <ul>
                                        <li>You'll receive an order confirmation email shortly</li>
                                        <li>We'll prepare your order for shipping</li>
                                        <li>You'll get tracking information once shipped</li>
                                        <li>Your order will arrive within 5-7 business days</li>
                                    </ul>
                                </div>
                                
                                <!-- Action Buttons -->
                                <div class="text-center mt-4">
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <a href="/order-details" class="btn btn-primary w-100">
                                                <i class="fas fa-eye me-2"></i>
                                                View Order Details
                                            </a>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <a href="/shop" class="btn btn-outline-primary w-100">
                                                <i class="fas fa-shopping-bag me-2"></i>
                                                Continue Shopping
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Additional Information -->
                                <div class="mt-4 p-3 bg-light rounded">
                                    <div class="row text-center">
                                        <div class="col-md-4 mb-3">
                                            <i class="fas fa-headset text-primary fs-3 mb-2"></i>
                                            <h6>24/7 Support</h6>
                                            <small class="text-muted">Need help? Contact our support team</small>
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <i class="fas fa-undo text-primary fs-3 mb-2"></i>
                                            <h6>Easy Returns</h6>
                                            <small class="text-muted">30-day return policy</small>
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <i class="fas fa-shield-alt text-primary fs-3 mb-2"></i>
                                            <h6>Secure Payment</h6>
                                            <small class="text-muted">Your payment is safe with us</small>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Social Share -->
                                <div class="text-center mt-4">
                                    <p class="text-muted mb-2">Share your purchase:</p>
                                    <div class="btn-group" role="group">
                                        <button type="button" class="btn btn-outline-primary btn-sm">
                                            <i class="fab fa-facebook-f"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-info btn-sm">
                                            <i class="fab fa-twitter"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-success btn-sm">
                                            <i class="fab fa-whatsapp"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-danger btn-sm">
                                            <i class="fab fa-instagram"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <script>
            // Auto-update order details with dynamic data
            document.addEventListener('DOMContentLoaded', function() {
                // Get order ID from URL or localStorage
                const urlParams = new URLSearchParams(window.location.search);
                const orderId = urlParams.get('orderId') || localStorage.getItem('latestOrderId') || '#ORD-2025-001234';
                
                // Update order ID in the display
                document.querySelector('.detail-value').textContent = orderId;
                
                // Update date to current date
                const currentDate = new Date().toLocaleDateString('en-IN', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                });
                document.querySelectorAll('.detail-value')[1].textContent = currentDate;
                
                // Calculate delivery date (7 days from now)
                const deliveryDate = new Date();
                deliveryDate.setDate(deliveryDate.getDate() + 7);
                const deliveryDateStr = deliveryDate.toLocaleDateString('en-IN', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                });
                document.querySelectorAll('.detail-value')[4].textContent = deliveryDateStr;
                
                // Update order details link
                const orderDetailsBtn = document.querySelector('a[href="/order-details"]');
                if (orderDetailsBtn) {
                    orderDetailsBtn.href = `/order-details?orderId=${orderId}`;
                }
                
                // Add click tracking for analytics
                document.querySelectorAll('.btn').forEach(btn => {
                    btn.addEventListener('click', function() {
                        console.log('Button clicked:', this.textContent.trim());
                    });
                });
                
                // Auto-clear order data from localStorage after successful display
                setTimeout(() => {
                    localStorage.removeItem('latestOrderId');
                }, 5000);
            });
            
            // Add some interactive elements
            document.querySelectorAll('.btn-group .btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const platform = this.querySelector('i').className;
                    alert(`Share feature for ${platform} coming soon!`);
                });
            });
            
            // Add hover effects for better UX
            document.querySelectorAll('.btn').forEach(btn => {
                btn.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-2px)';
                });
                
                btn.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
        </script>
        
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>