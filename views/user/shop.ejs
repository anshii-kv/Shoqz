
<%- include("../../views/partials/user/header") %>

<style>
    @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css');
    
    /* Global Styles */
    * {
        box-sizing: border-box;
    }
    
    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        line-height: 1.6;
        color: #2d3748;
        min-height: 100vh;
    }
    
    /* Main Title Styling */
    .main-title {
        background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 50%, #ec4899 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-weight: 800;
        margin-bottom: 8px;
        font-size: 3rem;
        text-align: center;
        letter-spacing: -0.025em;
    }
    
    .subtitle {
        color: #64748b;
        font-size: 1.2rem;
        margin-bottom: 0;
        text-align: center;
        font-weight: 400;
    }

    /* Enhanced Filter Section */
    .search-filter-section {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-radius: 24px;
        padding: 32px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        margin-bottom: 32px;
        position: relative;
        overflow: hidden;
    }
    
    .search-filter-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #4f46e5, #7c3aed, #ec4899);
        border-radius: 24px 24px 0 0;
    }
    
    .filter-header {
        margin-bottom: 28px;
        padding-bottom: 20px;
        border-bottom: 2px solid #e2e8f0;
    }
    
    .filter-header h4 {
        color: #1e293b;
        font-weight: 700;
        margin: 0;
        font-size: 1.4rem;
        display: flex;
        align-items: center;
        gap: 12px;
    }
    
    .filter-header i {
        background: linear-gradient(135deg, #4f46e5, #7c3aed);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-size: 1.2rem;
    }

    /* Search Input */
    .search-input-wrapper {
        position: relative;
    }
    
    .search-icon {
        position: absolute;
        left: 18px;
        top: 50%;
        transform: translateY(-50%);
        color: #64748b;
        z-index: 2;
        font-size: 1.1rem;
    }
    
    .search-input {
        padding: 16px 20px 16px 50px;
        border: 2px solid #e2e8f0;
        border-radius: 16px;
        font-size: 15px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        background: #ffffff;
        font-weight: 500;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    }
    
    .search-input:focus {
        border-color: #4f46e5;
        box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1), 0 4px 16px rgba(0, 0, 0, 0.08);
        outline: none;
        transform: translateY(-1px);
    }

    /* Filter Labels */
    .filter-label {
        font-weight: 600;
        color: #374151;
        margin-bottom: 10px;
        font-size: 0.95rem;
        display: flex;
        align-items: center;
        gap: 8px;
    }
    
    .filter-label i {
        color: #4f46e5;
        font-size: 0.9rem;
    }

    /* Custom Select */
    .custom-select {
        border: 2px solid #e2e8f0;
        border-radius: 16px;
        padding: 16px 20px;
        font-size: 15px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        background: #ffffff;
        font-weight: 500;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
        cursor: pointer;
    }
    
    .custom-select:focus {
        border-color: #4f46e5;
        box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1), 0 4px 16px rgba(0, 0, 0, 0.08);
        outline: none;
        transform: translateY(-1px);
    }

    /* Price Range Section */
    .price-range-section {
        margin-top: 28px;
        padding: 24px;
        background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
        border-radius: 20px;
        border: 1px solid #e2e8f0;
    }
    
    .price-input-wrapper {
        position: relative;
    }
    
    .currency-symbol {
        position: absolute;
        left: 18px;
        top: 50%;
        transform: translateY(-50%);
        color: #374151;
        font-weight: 600;
        z-index: 2;
        font-size: 1rem;
    }
    
    .price-input {
        padding: 16px 20px 16px 40px;
        border: 2px solid #e2e8f0;
        border-radius: 16px;
        font-size: 15px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        background: #ffffff;
        font-weight: 500;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    }
    
    .price-input:focus {
        border-color: #4f46e5;
        box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1), 0 4px 16px rgba(0, 0, 0, 0.08);
        outline: none;
        transform: translateY(-1px);
    }
    
    .price-separator {
        font-weight: 600;
        color: #64748b;
        font-size: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
    }

    /* Apply Button */
    .btn-apply {
        background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
        border: none;
        border-radius: 16px;
        padding: 16px 24px;
        font-weight: 600;
        font-size: 15px;
        width: 100%;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 8px 24px rgba(79, 70, 229, 0.25);
        color: white;
        text-transform: uppercase;
        letter-spacing: 0.025em;
    }
    
    .btn-apply:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 32px rgba(79, 70, 229, 0.35);
        background: linear-gradient(135deg, #4338ca 0%, #6d28d9 100%);
    }
    
    .btn-apply:active {
        transform: translateY(0);
    }

    /* Products Section */
    .products-section {
        margin-bottom: 60px;
    }

    /* Product Cards */
    .product-card {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        border-radius: 24px;
        overflow: hidden;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        height: 100%;
        display: flex;
        flex-direction: column;
        position: relative;
    }
    
    .product-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(79, 70, 229, 0.05), rgba(124, 58, 237, 0.05));
        opacity: 0;
        transition: opacity 0.3s ease;
        pointer-events: none;
    }
    
    .product-card:hover::before {
        opacity: 1;
    }
    
    .product-card:hover {
        transform: translateY(-12px) scale(1.02);
        box-shadow: 0 25px 60px rgba(0, 0, 0, 0.15);
        border-color: rgba(79, 70, 229, 0.2);
    }

    /* Product Image */
    .product-image-wrapper {
        position: relative;
        height: 280px;
        overflow: hidden;
        background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
    }
    
    .product-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .product-card:hover .product-image {
        transform: scale(1.1);
    }
    
    .product-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(79, 70, 229, 0.85), rgba(124, 58, 237, 0.85));
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        backdrop-filter: blur(8px);
    }
    
    .product-overlay i {
        color: white;
        font-size: 2.5rem;
        transform: scale(0.8);
        transition: transform 0.3s ease;
    }
    
    .product-card:hover .product-overlay {
        opacity: 1;
    }
    
    .product-card:hover .product-overlay i {
        transform: scale(1);
    }

    /* Discount Badge */
    .discount-badge {
        position: absolute;
        top: 16px;
        right: 16px;
        background: linear-gradient(135deg, #ef4444, #dc2626);
        color: white;
        padding: 10px 16px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: 0 8px 24px rgba(239, 68, 68, 0.4);
        z-index: 1;
        backdrop-filter: blur(10px);
    }

    /* Product Info */
    .product-info {
        padding: 28px 24px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        gap: 16px;
    }
    
    .product-title {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 0;
        flex-grow: 1;
    }
    
    .product-title a {
        color: #1e293b;
        text-decoration: none;
        transition: color 0.3s ease;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        line-height: 1.4;
    }
    
    .product-title a:hover {
        color: #4f46e5;
    }

    /* Price Section */
    .price-section {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 8px;
    }
    
    .current-price {
        font-size: 1.5rem;
        font-weight: 700;
        color: #059669;
        background: linear-gradient(135deg, #059669, #047857);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    
    .original-price {
        font-size: 1.1rem;
        color: #94a3b8;
        text-decoration: line-through;
        font-weight: 500;
    }

    /* Cart Button */
    .btn-cart {
        background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
        color: white;
        border: none;
        border-radius: 16px;
        padding: 14px 20px;
        font-weight: 600;
        font-size: 0.95rem;
        text-decoration: none;
        text-align: center;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 8px 24px rgba(79, 70, 229, 0.25);
        display: inline-block;
        width: 100%;
        text-transform: uppercase;
        letter-spacing: 0.025em;
    }
    
    .btn-cart:hover {
        color: white;
        text-decoration: none;
        transform: translateY(-2px);
        box-shadow: 0 12px 32px rgba(79, 70, 229, 0.35);
        background: linear-gradient(135deg, #4338ca 0%, #6d28d9 100%);
    }
    
    .btn-cart:active {
        transform: translateY(0);
    }
    
    .btn-cart i {
        margin-right: 8px;
    }

    /* No Products Found */
    .no-products-found {
        padding: 100px 20px;
        text-align: center;
    }
    
    .empty-state {
        max-width: 500px;
        margin: 0 auto;
        padding: 40px;
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(10px);
        border-radius: 24px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
    }
    
    .empty-icon {
        font-size: 5rem;
        color: #cbd5e1;
        margin-bottom: 24px;
        opacity: 0.8;
    }
    
    .empty-state h3 {
        color: #1e293b;
        margin-bottom: 16px;
        font-weight: 700;
        font-size: 1.5rem;
    }
    
    .empty-state p {
        color: #64748b;
        margin-bottom: 32px;
        line-height: 1.7;
        font-size: 1.1rem;
    }
    
    .btn-outline-primary {
        border: 2px solid #4f46e5;
        color: #4f46e5;
        background: transparent;
        padding: 12px 24px;
        border-radius: 16px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-outline-primary:hover {
        background: #4f46e5;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(79, 70, 229, 0.25);
    }

    /* Enhanced Pagination */
    .pagination-wrapper {
        display: flex;
        justify-content: center;
        margin-top: 50px;
        padding: 40px 0;
    }
    
    .pagination {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 12px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }
    
    .page-link {
        border: none;
        color: #64748b;
        padding: 12px 18px;
        margin: 0 4px;
        border-radius: 12px;
        font-weight: 600;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        text-decoration: none;
        background: transparent;
    }
    
    .page-link:hover {
        background: linear-gradient(135deg, #4f46e5, #7c3aed);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(79, 70, 229, 0.25);
    }
    
    .page-item.active .page-link {
        background: linear-gradient(135deg, #4f46e5, #7c3aed);
        color: white;
        box-shadow: 0 8px 24px rgba(79, 70, 229, 0.25);
    }
    
    .page-item.disabled .page-link {
        color: #cbd5e1;
        background: transparent;
        cursor: not-allowed;
    }
    
    .page-item.disabled .page-link:hover {
        transform: none;
        box-shadow: none;
    }

    /* Reset Button Styling */
    .btn-reset {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        border: none;
        border-radius: 16px;
        padding: 16px 24px;
        font-weight: 600;
        font-size: 15px;
        color: white;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 8px 24px rgba(239, 68, 68, 0.25);
        text-decoration: none;
        display: inline-block;
        text-align: center;
        text-transform: uppercase;
        letter-spacing: 0.025em;
    }
    
    .btn-reset:hover {
        color: white;
        text-decoration: none;
        transform: translateY(-2px);
        box-shadow: 0 12px 32px rgba(239, 68, 68, 0.35);
        background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
    }
    
    .btn-reset:active {
        transform: translateY(0);
    }
    
    .btn-reset i {
        margin-right: 8px;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .main-title {
            font-size: 2.5rem;
        }
        
        .search-filter-section {
            padding: 24px;
        }
        
        .product-image-wrapper {
            height: 220px;
        }
        
        .product-info {
            padding: 24px 20px;
        }
        
        .pagination {
            padding: 8px;
        }
        
        .page-link {
            padding: 10px 14px;
            font-size: 0.9rem;
        }
    }
    
    @media (max-width: 576px) {
        .main-title {
            font-size: 2rem;
        }
        
        .search-filter-section {
            padding: 20px;
        }
        
        .price-range-section .row > div {
            margin-bottom: 15px;
        }
        
        .btn-apply,
        .btn-reset {
            margin-top: 15px;
        }
        
        .product-image-wrapper {
            height: 200px;
        }
        
        .empty-state {
            padding: 30px 20px;
        }
        
        .empty-icon {
            font-size: 4rem;
        }
    }
    
    /* Smooth scroll behavior */
    html {
        scroll-behavior: smooth;
    }
    
    /* Custom scrollbar */
    ::-webkit-scrollbar {
        width: 8px;
    }
    
    ::-webkit-scrollbar-track {
        background: #f1f5f9;
    }
    
    ::-webkit-scrollbar-thumb {
        background: linear-gradient(135deg, #4f46e5, #7c3aed);
        border-radius: 10px;
    }
    
    ::-webkit-scrollbar-thumb:hover {
        background: linear-gradient(135deg, #4338ca, #6d28d9);
    }
    
    /* Loading animation for images */
    .product-image {
        animation: fadeIn 0.6s ease-in-out;
    }
    
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: scale(0.95);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }
    
</style>

<div class="colorlib-product">
    <div class="container">
        <!-- Enhanced Header Section -->
        <div class="row">
            <div class="col-sm-8 offset-sm-2 text-center colorlib-heading colorlib-heading-sm">
                <h2 class="main-title">Discover Our Products</h2>
                <p class="subtitle">Find exactly what you're looking for</p>
            </div>
        </div>

        <!-- Enhanced Filter and Search Section -->
        <div class="row mb-5">
            <div class="col-md-12">
                <div class="search-filter-section">
                    <div class="filter-header">
                        <h4><i class="fas fa-filter"></i> Filter & Search</h4>
                    </div>
                    <form action="/shop" method="GET" id="filterForm">
                        <div class="row align-items-end">
                            <!-- Search Bar -->
                            <div class="col-md-4 mb-3">
                                <div class="search-input-wrapper">
                                    <i class="fas fa-search search-icon"></i>
                                    <input type="text" name="search" class="form-control search-input" placeholder="Search products..." value="<%= searchQuery || '' %>" id="searchInput">
                                </div>
                            </div>
                            
                            <!-- Category Filter -->
                            <div class="col-md-3 mb-3">
                                <div class="form-group">
                                    <label class="filter-label"><i class="fas fa-tags"></i> Category</label>
                                    <select name="category" class="form-control custom-select" id="categoryFilter">
                                        <option value="">All Categories</option>
                                        <% if (categories && categories.length > 0) { %>
                                            <% categories.forEach(category => { %>
                                                <option value="<%= category._id %>" <%= selectedCategory == category._id ? 'selected' : '' %>><%= category.name %></option>
                                            <% }); %>
                                        <% } %>
                                    </select>
                                </div>
                            </div>
                            
                            <!-- Sort By -->
                            <div class="col-md-3 mb-3">
                                <div class="form-group">
                                    <label class="filter-label"><i class="fas fa-sort"></i> Sort By</label>
                                    <select name="sort" class="form-control custom-select" id="sortFilter">
                                        <option value="latest" <%= sortBy === 'latest' ? 'selected' : '' %>>Latest First</option>
                                        <option value="priceLow" <%= sortBy === 'priceLow' ? 'selected' : '' %>>Price: Low to High</option>
                                        <option value="priceHigh" <%= sortBy === 'priceHigh' ? 'selected' : '' %>>Price: High to Low</option>
                                        <option value="nameAZ" <%= sortBy === 'nameAZ' ? 'selected' : '' %>>Name: A-Z</option>
                                        <option value="nameZA" <%= sortBy === 'nameZA' ? 'selected' : '' %>>Name: Z-A</option>
                                    </select>
                                </div>
                            </div>
                            
                            <!-- Apply Button -->
                            <div class="col-md-2 mb-3">
                                <button type="submit" class="btn btn-primary btn-apply">
                                    <i class="fas fa-check"></i> Apply
                                </button>
                               
                            </div>
                        </div>
                        
                        <!-- Price Range Filter -->
                        <div class="price-range-section">
                            <div class="row align-items-center">
                                <div class="col-md-2">
                                    <label class="filter-label"><i class="fas fa-dollar-sign"></i> Price Range</label>
                                </div>
                                <div class="col-md-4">
                                    <div class="price-input-wrapper">
                                        <span class="currency-symbol">₹</span>
                                        <input type="number" name="minPrice" class="form-control price-input" placeholder="Min" value="<%= minPrice || '' %>" min="0">
                                    </div>
                                </div>
                                <div class="col-md-1 text-center">
                                    <span class="price-separator">to</span>
                                </div>
                                <div class="col-md-4">
                                    <div class="price-input-wrapper">
                                        <span class="currency-symbol">₹</span>
                                        <input type="number" name="maxPrice" class="form-control price-input" placeholder="Max" value="<%= maxPrice || '' %>" min="0">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Enhanced Product Display Section -->
        <div class="products-section">
            <div class="row">
                <% if (products && products.length > 0) { %>
                    <% products.forEach(product => { %>
                        <div class="col-md-3 col-sm-6 mb-4">
                            <div class="product-card">
                                <div class="product-image-wrapper">
                                    <a href="/product/<%= product._id %>" class="product-link">
                                        <%= console.log(product.productImage[0]) %>
                                        <img src="/uploads/product-images/<%= product.productImage[0] %>" class="product-image" alt="<%= product.productName %>">
                                        
                                        <% if (product.productOffer > 0 || product.categoryoffer > 0) { %>
                                            <div class="discount-badge">
                                                <% if (product.productOffer > 0 && product.categoryoffer > 0) { %>
                                                    <%= Math.max(product.productOffer, product.categoryoffer) %>% OFF
                                                <% } else if (product.productOffer > 0) { %>
                                                    <%= product.productOffer %>% OFF
                                                <% } else { %>
                                                    <%= product.categoryoffer %>% OFF
                                                <% } %>
                                            </div>
                                        <% } %>
                                        
                                        <div class="product-overlay">
                                            <i class="fas fa-eye"></i>
                                        </div>
                                    </a>
                                </div>
                                
                                <div class="product-info">
                                    <h3 class="product-title">
                                        <a href="/product/<%= product._id %>"><%= product.productName %></a>
                                    </h3>
                                    
                                    <div class="price-section">
                                        <span class="current-price">₹<%= product.finalamount %></span>
                                        <% if (product.productOffer > 0 || product.categoryoffer > 0) { %>
                                            <span class="original-price">₹<%= product.salePrice.toFixed(2) %></span>
                                        <% } %>
                                    </div>
                                    
                                    <div class="product-actions">
                                        <a href="/product/<%= product._id %>"class="btn btn-cart">
                                            <i class="fas fa-shopping-cart"></i> View Product
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="col-md-12">
                        <div class="no-products-found">
                            <div class="empty-state">
                                <i class="fas fa-search empty-icon"></i>
                                <h3>No products found</h3>
                                <p>Try adjusting your search or filter criteria to find what you're looking for</p>
                                <button type="button" class="btn btn-outline-primary" onclick="document.getElementById('filterForm').reset(); document.getElementById('filterForm').submit();">
                                    <i class="fas fa-refresh"></i> Clear Filters
                                </button>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Enhanced Pagination Section -->
        <% if (totalPages > 0) { %>
            <div class="row">
                <div class="col-md-12">
                    <div class="pagination-wrapper">
                        <nav aria-label="Product pagination">
                            <ul class="pagination">
                                <% if (currentPage > 1) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="<%= paginationUrl %>&page=<%= currentPage - 1 %>">
                                            <i class="fas fa-chevron-left"></i> Previous
                                        </a>
                                    </li>
                                <% } else { %>
                                    <li class="page-item disabled">
                                        <span class="page-link"><i class="fas fa-chevron-left"></i> Previous</span>
                                    </li>
                                <% } %>
                                
                                <% 
                                let startPage = Math.max(1, currentPage - 2);
                                let endPage = Math.min(totalPages, currentPage + 2);
                                
                                if (startPage > 1) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="<%= paginationUrl %>&page=1">1</a>
                                    </li>
                                    <% if (startPage > 2) { %>
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    <% } %>
                                <% } %>
                                
                                <% for (let i = startPage; i <= endPage; i++) { %>
                                    <li class="page-item <%= currentPage == i ? 'active' : '' %>">
                                        <% if (currentPage == i) { %>
                                            <span class="page-link"><%= i %></span>
                                        <% } else { %>
                                            <a class="page-link" href="<%= paginationUrl %>&page=<%= i %>"><%= i %></a>
                                        <% } %>
                                    </li>
                                <% } %>
                                
                                <% if (endPage < totalPages) { %>
                                    <% if (endPage < totalPages - 1) { %>
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    <% } %>
                                    <li class="page-item">
                                        <a class="page-link" href="<%= paginationUrl %>&page=<%= totalPages %>"><%= totalPages %></a>
                                    </li>
                                <% } %>
                                
                                <% if (currentPage < totalPages) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="<%= paginationUrl %>&page=<%= currentPage + 1 %>">
                                            Next <i class="fas fa-chevron-right"></i>
                                        </a>
                                    </li>
                                <% } else { %>
                                    <li class="page-item disabled">
                                        <span class="page-link">Next <i class="fas fa-chevron-right"></i></span>
                                    </li>
                                <% } %>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>


<script>
    // JavaScript for auto-submitting on filter changes
    document.getElementById('categoryFilter').addEventListener('change', function() {
        document.getElementById('filterForm').submit();
    });
    
    document.getElementById('sortFilter').addEventListener('change', function() {
        document.getElementById('filterForm').submit();
    });
    
    // Delayed search to avoid too many requests
    let searchTimeout;
    document.getElementById('searchInput').addEventListener('input', function() {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(function() {
            document.getElementById('filterForm').submit();
        }, 1000); // Submit after 1 second of inactivity
    });
</script>

